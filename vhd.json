{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "diskName": {
            "type": "string",
            "defaultValue": "DataDiskUus"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "diskSize": {
            "type": "int",
            "defaultValue": 1024,
            "allowedValues": [
                1024,
                2048,
                4096
            ]
        }
    },
    "functions": [
        {
            "namespace": "miradore",
            "members": {
                "uniqueName": {
                    "parameters": [
                        {
                            "name": "diskName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[toLower(parameters('diskName'))]"
                    }
                }
            }
        }
    ]
}